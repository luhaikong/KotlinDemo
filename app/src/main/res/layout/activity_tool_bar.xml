<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lhk.kotlindemo.base.ToolBarActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary">
        <TextView
            android:text="@string/title_toolbar_back"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/write"
            android:drawableStart="@mipmap/ic_chevron_left_black_26px"
            android:drawableLeft="@mipmap/ic_chevron_left_black_26px"
            android:id="@+id/tv_toolBar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center_horizontal"
                android:text="@string/title_toolbar"
                android:textColor="@color/write"
                android:textSize="@dimen/toolbar_title_size"
                android:id="@+id/tv_toolBar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_toolBar_subtitle"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/write"
                android:textSize="@dimen/toolbar_subtitle_size"
                android:text="@string/title_subtitle_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>
